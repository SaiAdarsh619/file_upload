<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Manager</title>
    <link rel="stylesheet" href="/styles.css">
    <script src="/script.js" defer></script>
</head>
<body>
    <div class="app-container">
        <!-- Header -->
        <header class="app-header">
            <h1>Files</h1>
            <div class="header-actions">
                <input type="text" id="searchInput" placeholder="Search..." class="search-input">
                <button id="viewToggle" class="view-toggle-btn" title="Toggle view">‚â°</button>
            </div>
        </header>

        <!-- Main Content -->
        <div class="app-content">
            <!-- Upload Section -->
            <div class="upload-section">
                <form id="uploadForm" class="upload-form">
                    <div class="upload-inputs">
                        <div class="upload-input-group">
                            <input type="file" name="file" id="file" multiple>
                            <label for="file">üìÅ Files</label>
                        </div>
                        <div class="upload-input-group">
                            <input type="file" name="folder" id="folder" webkitdirectory multiple>
                            <label for="folder">üìÇ Folder</label>
                        </div>
                    </div>
                    <button type="submit" class="upload-submit-btn">‚¨ÜÔ∏è Upload</button>
                </form>
                <div id="error" class="error-message" style="display: none;"></div>
            </div>

            <!-- Toolbar -->
            <div class="toolbar">
                <div id="breadcrumb" class="breadcrumb"></div>
                <div class="toolbar-actions">
                    <button id="downloadSelectedBtn" class="toolbar-btn" onclick="downloadSelected()" style="display: none;">
                        Download
                    </button>
                    <button id="deleteSelectedBtn" class="toolbar-btn delete" onclick="deleteSelected()" style="display: none;">
                        Delete
                    </button>
                </div>
            </div>

            <!-- Files View -->
            <div class="files-view">
                <div id="filelist" class="file-list"></div>
            </div>
        </div>
    </div>

    <!-- Context Menu -->
    <div id="contextMenu" class="context-menu" style="display: none;">
        <button class="context-item" id="ctxDownload">Download</button>
        <button class="context-item" id="ctxDelete">Delete</button>
    </div>
</body>
</html>